<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    >

    <ImageView
        android:id="@+id/mesf_item_iconiv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_user"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/mesf_item_tvmes"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@mipmap/chat_send"
        android:text="@string/app_send_context"
        android:textColor="#444444"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/mesf_item_iconiv"
        android:paddingBottom="10dp"
        android:layout_marginRight="2dp"
        />

    <ImageView
        android:id="@+id/mesf_item_imgMes"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:background="@mipmap/chat_send"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@id/mesf_item_iconiv"
        android:src="@drawable/ic_uncheck"/>

</RelativeLayout>

