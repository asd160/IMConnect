<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="test.bick.com.imconnect.HomeActivity">

    <RelativeLayout
        android:id="@+id/relrerlerel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#393A3F"
        >
        <TextView
            android:id="@+id/zhu_user_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="微信(3)"
            android:textColor="#fff"
            android:textSize="19sp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/zhu_add_haoyou"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="+"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/zhu_sousuo_haoyou"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/zhu_add_haoyou"
            android:layout_toLeftOf="@+id/zhu_add_haoyou"
            android:layout_toStartOf="@+id/zhu_add_haoyou"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#FAFAFA"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relrerlerel"
        android:layout_above="@+id/rlbuttom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rlbuttom"
        android:background="#ccc"/>

    <RadioGroup
        android:id="@+id/rlbuttom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
         >
        <RadioButton
            android:padding="2dp"
            android:button="@null"
            android:id="@+id/iv_xiaoxi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:text="消息"
            android:gravity="center"
            android:textSize="15sp"
            android:drawableTop="@mipmap/xiaoxihh"
            />

        <RadioButton
            android:paddingTop="3dp"
            android:button="@null"
            android:id="@+id/iv_tongxun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:text="通讯录"
            android:gravity="center"
            android:drawableTop="@mipmap/tongxunluhh"
            />
        <RadioButton
            android:padding="3dp"
            android:button="@null"
            android:id="@+id/iv_zhibo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="直播"
            android:background="#fff"
            android:drawableTop="@mipmap/zhibohh"
            />
        <RadioButton
            android:paddingTop="3dp"
            android:button="@null"
            android:id="@+id/iv_shezhi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/userhh"
            android:gravity="center"
            android:background="#fff"
            android:text="设置"
            />
    </RadioGroup>

</RelativeLayout>
